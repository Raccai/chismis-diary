<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App Theme (used after splash) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">#1d1c19</item>
        <item name="android:navigationBarColor">#1d1c19</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        
        <!-- Required to prevent Android 12 from using the default system splash -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>
</resources>
